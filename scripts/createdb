#!/bin/bash
mysql -h mysql -u root -p${MARIADB_PASSWORD} <<SQL_QUERY
 CREATE USER IF NOT EXISTS 'ironic'@'localhost' IDENTIFIED BY '$MYSQL_PASSWORD' ;
 CREATE USER IF NOT EXISTS 'ironic'@'%' IDENTIFIED BY '$MYSQL_PASSWORD' ;
 GRANT ALL on *.* TO 'ironic'@'localhost' IDENTIFIED BY '$MYSQL_PASSWORD' WITH GRANT OPTION ;
GRANT ALL on *.* TO 'ironic'@'%' IDENTIFIED BY '$MYSQL_PASSWORD' WITH GRANT OPTION ;
CREATE DATABASE IF NOT EXISTS  ironic ;
FLUSH PRIVILEGES ;
SQL_QUERY
